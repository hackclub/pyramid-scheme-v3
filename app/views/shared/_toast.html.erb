<div id="toast-container" class="fixed top-4 right-4 z-[100] flex flex-col gap-3 max-w-sm">
  <% if flash[:notice] %>
    <div data-controller="toast" 
         data-toast-duration-value="5000"
         class="transform translate-x-full opacity-0 transition-all duration-300 ease-out
                flex items-start gap-3 p-4 rounded-xl border border-success/30 bg-background shadow-lg backdrop-blur-sm">
      <div class="flex-shrink-0 w-5 h-5 mt-0.5 text-success">
        <%= icon :check, size: 20 %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-semibold text-foreground"><%= t('flash.success') %></p>
        <p class="text-sm text-muted-foreground mt-0.5"><%= flash[:notice] %></p>
      </div>
      <button type="button" 
              data-action="toast#dismiss"
              class="flex-shrink-0 p-1 -m-1 text-muted-foreground hover:text-foreground transition-colors">
        <%= icon :x, size: 16 %>
      </button>
    </div>
  <% end %>
  
  <% if flash[:alert] %>
    <div data-controller="toast" 
         data-toast-duration-value="8000"
         class="transform translate-x-full opacity-0 transition-all duration-300 ease-out
                flex items-start gap-3 p-4 rounded-xl border border-destructive/30 bg-background shadow-lg backdrop-blur-sm">
      <div class="flex-shrink-0 w-5 h-5 mt-0.5 text-destructive">
        <%= icon :alert_triangle, size: 20 %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-semibold text-foreground"><%= t('flash.error') %></p>
        <p class="text-sm text-muted-foreground mt-0.5"><%= flash[:alert] %></p>
      </div>
      <button type="button" 
              data-action="toast#dismiss"
              class="flex-shrink-0 p-1 -m-1 text-muted-foreground hover:text-foreground transition-colors">
        <%= icon :x, size: 16 %>
      </button>
    </div>
  <% end %>
</div>
