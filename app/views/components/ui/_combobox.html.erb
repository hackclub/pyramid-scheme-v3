<% options ||= {} %>

<div data-controller="dropdown" class="<%= options[:class] %>">
  <div data-dropdown-target="trigger" data-action="click->dropdown#toggle">
    <%= content_for(:combobox_trigger) %>
  </div>

  <div data-dropdown-target="wrapper" class="relative">
    <div
      data-state="closed"
      role="dialog"
      class="<%= tw("hidden absolute left-1/2 -translate-x-1/2 bottom-full mb-3 z-50 rounded-md border bg-popover p-2 text-popover-foreground shadow-md outline-none #{content_for(:combobox_content_class)}") %>"
      data-dropdown-target="content"
      tabindex="-1">
      <%= content_for(:combobox_content) %>
    </div>
  </div>
</div>
