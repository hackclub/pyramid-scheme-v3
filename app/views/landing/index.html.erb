<script>
  (() => {
    const enhanceEventNumbers = () => {
      // If Stimulus already registered the controller, skip the fallback
      if (window.Stimulus?.router?.modulesByIdentifier?.has("event-numbers")) return;

      const root = document.querySelector("[data-controller='event-numbers']");
      if (!root || root.dataset.eventNumbersEnhanced) return;

      const tabs = [...root.querySelectorAll("[data-event-numbers-target='tab']")];
      const panels = [...root.querySelectorAll("[data-event-numbers-target='panel']")];
      if (!tabs.length || !panels.length) return;

      const setActive = (key) => {
        tabs.forEach((tab) => {
          const isActive = tab.dataset.key === key;
          tab.setAttribute("aria-selected", isActive);
          tab.dataset.state = isActive ? "active" : "inactive";
        });

        panels.forEach((panel) => {
          const isActive = panel.dataset.key === key;
          panel.hidden = !isActive;
          panel.dataset.state = isActive ? "active" : "inactive";
        });
      };

      const initialKey = root.dataset.eventNumbersActiveValue || tabs[0].dataset.key;
      setActive(initialKey);

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => setActive(tab.dataset.key));
      });

      root.dataset.eventNumbersEnhanced = "true";
    };

    document.addEventListener("turbo:load", enhanceEventNumbers);
    document.addEventListener("DOMContentLoaded", enhanceEventNumbers);
  })();
</script>

