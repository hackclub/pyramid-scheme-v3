<div class="campaign-panel-inner p-5 sm:p-6 border-2 border-purple-500/30 bg-purple-500/10 rounded-xl">
  <div class="flex items-start gap-4">
    <%= icon :circle_check, size: 28, class_name: "text-purple-600 flex-shrink-0 mt-0.5" %>
    <div class="flex-1 min-w-0">
      <p class="campaign-font text-xl sm:text-2xl font-black text-purple-600 mb-2">
        Digital Poster Activated!
      </p>
      <p class="text-sm sm:text-base campaign-text-secondary mb-4 leading-relaxed">
        Your link is now active. Share it online, on social media, or anywhere digital!
        <br><span class="text-purple-600 font-semibold">Note: Digital posters don't earn bonus shards.</span>
      </p>
      
      <div class="space-y-3">
        <%= link_to download_poster_path(poster), class: "campaign-btn campaign-btn--primary w-full justify-center text-base" do %>
          <%= icon :download, size: 20 %>
          Download Poster
        <% end %>
        
        <p class="text-xs campaign-text-muted text-center leading-relaxed">
          Share the image or link anywhere online!
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  // Hide the form after successful poster generation
  const form = document.querySelector('[data-poster-modal-target="form"]');
  if (form) {
    form.style.display = 'none';
  }
</script>
